<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Ari's Bar Mitzvah</title>

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@500;600&family=Montserrat:wght@700&display=swap" rel="stylesheet">

<style>
:root{
  --red:#E81828;
  --blue:#0E2A66;
  --green:#004C54;
}

*{box-sizing:border-box;}

body{
  margin:0;
  background:
    radial-gradient(circle at 20% 30%, rgba(232,24,40,.05), transparent 60%),
    radial-gradient(circle at 80% 60%, rgba(0,76,84,.05), transparent 60%),
    linear-gradient(#f7f6f2, #f1f1ef);
  color:#111;
}

/* HEADER */
.header{
  background:var(--blue);
  height:55px;
}

.stripes{
  height:36px;
  background:
    linear-gradient(to bottom,
      var(--red) 0px,
      var(--red) 10px,
      white 10px,
      white 14px,
      var(--green) 14px,
      var(--green) 24px,
      white 24px,
      white 28px,
      var(--red) 28px,
      var(--red) 36px
    );
}

/* HERO */
.hero{
  display:flex;
  align-items:center;
  justify-content:center;
  gap:50px;
  padding:60px 20px 110px;
  max-width:1200px;
  margin:auto;
  flex-wrap:wrap;
  position:relative;
  z-index:1;
}

.hero-text{
  flex:1;
  min-width:300px;
  text-align:center;
}

.hero-title img{
  max-width:500px;
  width:100%;
  margin-bottom:30px;
}

.event-wrapper{
  container-type:inline-size;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:16px;
}

.line-red,.line-green{
  height:4px;
  border-radius:4px;
}

.line-red{
  width:70cqw;
  background:linear-gradient(to right,transparent,var(--red) 20%,var(--red) 80%,transparent);
}

.line-green{
  width:45cqw;
  background:linear-gradient(to right,transparent,var(--green) 20%,var(--green) 80%,transparent);
}

.event-info{
  font-family:'Cormorant Garamond', serif;
  font-size: clamp(20px, 4cqw, 34px);
  color:var(--blue);
  white-space:nowrap;
  line-height:1.6;
  text-align:center;
}

/* IMAGE CROSSFADE + KEN BURNS */

.hero-image{
  flex:1;
  min-width:280px;
  display:flex;
  justify-content:center;
  position:relative;
  height:460px;
}

.hero-image img{
  position:absolute;
  max-height:460px;
  width:auto;
  filter: drop-shadow(0 25px 35px rgba(0,0,0,.25));
  opacity:0;
  transform: scale(1);
  transition: opacity 1.2s ease-in-out, transform 6s ease-in-out;
}

.hero-image img.active{
  opacity:1;
  transform: scale(1.06);
}

/* OVERLAY FEATURE PANEL */

.overlay-features{
  max-width:1100px;
  margin:-150px auto 80px;
  padding:55px 50px;

  background:
    linear-gradient(135deg, rgba(255,255,255,.88), rgba(245,244,240,.88)),
    repeating-linear-gradient(
      45deg,
      rgba(0,0,0,.02),
      rgba(0,0,0,.02) 2px,
      transparent 2px,
      transparent 4px
    );

  backdrop-filter: blur(6px);
  border-radius:22px;
  box-shadow:0 30px 70px rgba(0,0,0,.15);

  display:grid;
  grid-template-columns:repeat(3,1fr);
  gap:40px;
  text-align:center;
  position:relative;
  z-index:3;
}

.overlay-features::before{
  content:"";
  position:absolute;
  inset:0;
  background:
    radial-gradient(circle at 15% 20%, rgba(232,24,40,.04), transparent 50%),
    radial-gradient(circle at 85% 80%, rgba(0,76,84,.04), transparent 50%);
  border-radius:22px;
  pointer-events:none;
}

.feature-card{
  position:relative;
  z-index:2;
  display:flex;
  flex-direction:column;
  align-items:center;
  gap:14px;
}

/* Unified Logo Size */
.feature-card img{
  height: clamp(130px, 12vw, 190px);
  width:auto;
}

.feature-card button{
  font-family:'Montserrat', sans-serif;
  font-weight:700;
  letter-spacing:2px;
  padding:14px 38px;
  background:var(--blue);
  color:white;
  border:none;
  border-radius:6px;
  cursor:pointer;
  transition:.2s;
  font-size:16px;
}

.feature-card button:hover{
  background:var(--green);
}

/* CONTENT SPLIT */

.content{
  display:grid;
  grid-template-columns:1fr 1fr;
  gap:70px;
  max-width:1200px;
  margin:80px auto;
  padding:0 20px;
}

iframe{
  width:100%;
  height:900px;
  border:none;
  border-radius:12px;
  box-shadow:0 20px 50px rgba(0,0,0,.15);
}

.faq details{
  margin-bottom:15px;
  border:1px solid #ddd;
  border-radius:6px;
  overflow:hidden;
}

.faq summary{
  padding:15px;
  background:#f2f2f2;
  cursor:pointer;
  font-weight:bold;
}

.faq p{
  padding:15px;
  margin:0;
  background:white;
}

.mitzvah{
  margin-top:40px;
  padding:30px;
  background:white;
  border-left:5px solid var(--green);
}

/* RESPONSIVE */

@media(max-width:900px){

  .hero{
    flex-direction:column;
  }

  .hero-image{
    height:380px;
  }

  .overlay-features{
    grid-template-columns:1fr;
    margin:-80px 20px 60px;
    padding:40px 25px;
  }

  .feature-card img{
    height: clamp(100px, 20vw, 150px);
  }

  .content{
    grid-template-columns:1fr;
  }

  iframe{
    height:1000px;
  }
}
</style>
</head>

<body>

<div class="header"></div>
<div class="stripes"></div>

<section class="hero">

  <div class="hero-text">
    <div class="hero-title">
      <img src="./website-ari-title.png" alt="Ari's Bar Mitzvah">
    </div>

    <div class="event-wrapper">
      <div class="line-red"></div>
      <div class="line-green"></div>

      <div class="event-info">
        Saturday, May 9, 2026 • 5:30 PM – 11:00 PM<br>
        Congregation Kol Ami<br>
        1101 Springdale Road • Cherry Hill, NJ 08003
      </div>

      <div class="line-green"></div>
      <div class="line-red"></div>
    </div>
  </div>

  <div class="hero-image">
    <img src="./ari-sixers.png" class="active">
    <img src="./ari-phillies.png">
    <img src="./ari-eagles.png">
  </div>

</section>

<div class="overlay-features">

  <div class="feature-card">
    <img src="./logo-ari-phillies.png" alt="RSVP">
    <button onclick="document.getElementById('rsvp').scrollIntoView({behavior:'smooth'})">
      RSVP
    </button>
  </div>

  <div class="feature-card">
    <img src="./logo-ari-sixers.png" alt="FAQ">
    <button onclick="document.getElementById('faq').scrollIntoView({behavior:'smooth'})">
      FAQ
    </button>
  </div>

  <div class="feature-card">
    <img src="./logo-eagles.png" alt="Mitzvah Project">
    <button onclick="document.getElementById('mitzvah').scrollIntoView({behavior:'smooth'})">
      Mitzvah Project
    </button>
  </div>

</div>

<section class="content">

  <div id="rsvp">
    <h2 style="color:var(--blue);">RSVP</h2>
    <iframe src="https://ariseshasaibarmitzvah.rsvpify.com"></iframe>
  </div>

  <div>
    <h2 id="faq" style="color:var(--blue);">FAQ</h2>
    <div class="faq">
      <details>
        <summary>What time does the celebration begin?</summary>
        <p>Saturday, May 9, 2026 from 5:30 PM to 11:00 PM.</p>
      </details>
    </div>

    <div id="mitzvah" class="mitzvah">
      <h2 style="color:var(--green); margin-top:0;">Mitzvah Project</h2>
      <p>
        Ari is fundraising and volunteering with <strong>Arden for All</strong>,
        supporting access to theater and arts education.
      </p>
    </div>
  </div>

</section>

<script>
const slides = document.querySelectorAll('.hero-image img');
let current = 0;

setInterval(() => {
  slides[current].classList.remove('active');
  current = (current + 1) % slides.length;
  slides[current].classList.add('active');
}, 5000);
</script>

</body>
</html>
